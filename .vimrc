set termguicolors
colorscheme catppuccin_mocha
set clipboard=unnamedplus

let g:lightline = {'colorscheme': 'catppuccin_mocha'}
let g:airline_theme = 'catppuccin_mocha'

let g:cpp_function_highlight = 1    " Enable function highlighting
let g:cpp_attributes_highlight = 1  " Highlight C++11 attributes
let g:cpp_member_highlight = 1      " Highlight struct/class members
let g:cpp_operator_highlight = 1    " Highlight operators
let g:cpp_simple_highlight = 0      " Keep detailed keyword highlighting

syntax enable
filetype plugin indent on

